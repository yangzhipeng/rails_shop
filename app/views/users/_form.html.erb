    <%= f.label :password, '密码:' %><br>
    <%= f.password_field :password, :size => 12 %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, '确认密码:' %><br>
    <%= f.password_field :password_confirmation, :size => 12 %>
  </div>
  <div class="actions">
    <%= f.submit '提交' %>
  </div>
  </fieldset>
<% end %>
</div>